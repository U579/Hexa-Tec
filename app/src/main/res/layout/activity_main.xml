<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/spider_fondo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/spider"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textAlignment="center"/>

            <Button
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/conectar_spider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/conectar"
                android:backgroundTint="@color/anaranjado_oscuro"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/spider_img"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:background="@drawable/scorpion_fondo">

            <ImageView
                android:id="@+id/btn_ajustes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_settings_24"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scorpion_img"/>

            <Button
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:id="@+id/conectar_scorpion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/conectar"
                android:backgroundTint="@color/anaranjado_oscuro"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/scorpion"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="40sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>